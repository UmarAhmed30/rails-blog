<div class="container">
  <div class="container text-center">
    <h1><%= @user.name %></h1>
    <h6><%= pluralize(@user.views, 'view') %></h6>
    <span>Thanks for checking me out! Here are my posts ;)</span>
  </div>

  <% @user.posts.each do |post| %>
  <div class="container my-5">
    <div class="card border-success my-5">
      <div class="card-body">
        <h5 class="card-title"><%= post.title %></h5>
        <h6 class="card-subtitle mb-2 text-muted">
          <%= link_to pluralize(post.comments.size,"comment"), post_path(post) %>
        </h6>
        <p class="card-text"><%= post.body %></p>
        <div class="btn-group">
          <%= link_to 'Edit', edit_post_path(post), class: "btn
          btn-outline-warning" %> <%= button_to 'Delete', post, method: :delete,
          form: { data: {turbo_confirm: "Are you sure?"}}, class: "btn
          btn-outline-danger mx-2" %>
        </div>
      </div>
      <div class="card-footer text-muted">
        <i class="bi bi-eye-fill"></i> <%= pluralize(post.views, "view") %>
      </div>
    </div>
    <% end %>
  </div>
</div>
